@model IEnumerable<Korea.Models.Domain.PositionForImport>

@{
    ViewBag.Title = "Список позиций запчастей";
}

<h1>@ViewBag.Title</h1>
    
                      <table class="table table-hover">
                          <thead>
                              <tr>
                                  <td>Название</td>
                                  <td>Вес</td>
                                  <td>Операции</td>
                              </tr>
                          </thead>
                          <tbody>
                              @foreach (var item in Model)
                              {
                                  <tr>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Title)
                                      </td>

                                      <td class="TableCenter">@Html.DisplayFor(modelItem => item.Weight)</td>
                                      
                                      <td class="TableBtn">
                                          @Html.ActionLink("Редактировать", "Edit", new { @Id = item.Id }, new { @class = "btn btn-primary btn-sm" }) 
                                          @Html.ActionLink("Удалить", "Delete", new { @Id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                                      </td>
                                  </tr>
                              }
                          </tbody>
                      </table>
